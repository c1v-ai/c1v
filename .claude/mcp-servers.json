{
  "$schema": "https://modelcontextprotocol.io/schema/mcp-servers.json",
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/Users/davidancor/Documents/MDR/c1v"],
      "description": "Access to local filesystem for reading/writing files",
      "requiredFor": ["all-agents"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub API access for issues, PRs, and repository management",
      "requiredFor": ["platform-engineering", "quality-docs"]
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${POSTGRES_URL}"
      },
      "description": "PostgreSQL database access for schema management and queries",
      "requiredFor": ["platform-engineering", "data-infrastructure"]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Persistent memory storage for agent context and state",
      "requiredFor": ["all-agents"]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Extended reasoning capabilities for complex problem solving",
      "requiredFor": ["ai-agents", "product-planning"]
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "description": "Web search capabilities for research and documentation lookup",
      "requiredFor": ["quality-docs", "product-planning"],
      "optional": true
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "description": "HTTP client for API testing and external service integration",
      "requiredFor": ["platform-engineering", "ai-agents"]
    }
  },
  "configuration": {
    "environmentVariables": {
      "GITHUB_TOKEN": {
        "description": "GitHub Personal Access Token for API access",
        "required": true,
        "source": ".env.local"
      },
      "POSTGRES_URL": {
        "description": "PostgreSQL connection string",
        "required": true,
        "source": ".env.local",
        "format": "postgresql://user:password@host:port/database"
      },
      "BRAVE_API_KEY": {
        "description": "Brave Search API key (optional)",
        "required": false,
        "source": ".env.local"
      }
    },
    "securityNotes": [
      "Never commit .env.local to version control",
      "Use environment-specific credentials",
      "Rotate tokens regularly",
      "Use read-only tokens where possible"
    ],
    "setupInstructions": [
      "1. Copy .env.example to .env.local",
      "2. Fill in required environment variables",
      "3. Ensure GITHUB_TOKEN has repo and workflow permissions",
      "4. Test MCP connection with: claude mcp list"
    ]
  },
  "version": "1.0.0",
  "lastUpdated": "2026-01-12"
}
