# ============================================
# Local Development Environment
# ============================================
# Copy to .env.local and fill in your API keys
# For production, use Vercel environment variables

# Database (use Supabase local for development)
# Run `pnpm db:start` to start local Postgres
POSTGRES_URL="postgresql://postgres:postgres@localhost:54322/postgres"

# Auth (32+ characters required)
AUTH_SECRET="your-auth-secret-minimum-32-characters-long-here"

# Anthropic (required for AI features)
ANTHROPIC_API_KEY="sk-ant-your-key-here"

# Application URL
BASE_URL="http://localhost:3000"

# Stripe (use TEST keys for development - sk_test_, not sk_live_)
STRIPE_SECRET_KEY="sk_test_your-test-key-here"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret-here"

# Optional: LangSmith tracing (uncomment to enable)
# LANGCHAIN_API_KEY="lsv2_pt_your-key-here"
# LANGCHAIN_TRACING_V2="true"
# LANGCHAIN_PROJECT="product-helper-dev"
